namespace App\data;

interface DataServiceInterface{
    
    function __construct();
    
    /**
     * create user takes in a user model connects to the database and writes the information to mySQL
     * @param $user
     */
    public function create($object);
    
    /**
     * UpdateUser takes in a updated user model as well as an id to rewrite the data in the database of the currect User
     * @param $updatedUser
     * @param int $id
     */
    public function update($object);
    
    /**
     * deleteUser takes in an id of the user to be able to remove the row from the database
     * @param int $id
     */
    public function delete(int $id);
    
    /**
     * view all users returns a list of all user models in the database
     */
    public function viewAll();
    
    /**
     * view user takes in a specific id inorder to return a full user model
     * @param int $id
     */
    public function viewByID(int $id);
}