namespace App\model;

Class User
{
    private $idNum;
    private $firstName;
    private $lastName;
    private $email;
    private $phoneNumber;
    private $userRole;
    private $active;
    private $userCredentials;
    private $userInformation;
    
    function __construct(int $idNum, String $firstName, String $lastName, String $email, String $phoneNumber, 
                         int $userRole, bool $active, UserCredential $userCredentials, UserInformation $userInforamtion)
    {
        $this->idNum = $idNum;
        $this->firstName = $firstName;
        $this->lastName = $lastName;
        $this->email = $email;
        $this->phoneNumber = $phoneNumber;
        $this->userRole = $userRole;
        $this->active = $active;
        $this->userCredentials = $userCredentials;
        $this->userInformation = $userInforamtion;
    }
    
    public function getIdNum()
    {
        return $this->idNum;
    }
    
    public function getFirstName()
    {
        return $this->firstName;
    }
    
    public function getLastName()
    {
        return $this->lastName;
    }
    
    public function getEmail()
    {
        return $this->email;
    }
    
    public function getPhoneNumber()
    {
        return $this->phoneNumber;
    }
    
    public function getUserRole()
    {
        return $this->userRole;
    }
    
    public function isActive()
    {
        return $this->active;
    }
    
    public function getUserCredential()
    {
        return $this->userCredentials;
    }
    
    public function getUserInformation()
    {
        return $this->userInformation;
    }
    
    public function setIdNum(int $idNum)
    {
        $this->idNum = $idNum;
    }
    
    public function setFirstName(String $firstName)
    {
        $this->firstName = $firstName;
    }
    
    public function setLastName(String $lastName)
    {
        $this->lastName = $lastName;
    }
    
    public function setEmail(String $email)
    {
        $this->email = $email;
    }
    
    public function setPhoneNumber(String $phoneNumber)
    {
        $this->phoneNumber = $phoneNumber;
    }
    
    public function setUserRole(int $userRole)
    {
        $this->userRole = $userRole;
    }
    
    public function setActive(bool $active)
    {
        $this->active = $active;
    }
    
    public function setUserCredentials(UserCredential $userCredentials)
    {
        $this->userCredentials = $userCredentials;
    }
    
    public function setUserInformation(UserInformation $userInformation)
    {
        $this->userInformation = $userInformation;
    }
    
}