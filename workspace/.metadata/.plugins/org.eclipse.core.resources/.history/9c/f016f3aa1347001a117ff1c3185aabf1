namespace App\business;

use App\model\User;

interface BusinessServiceInterface{
     
    function __construct();
    
    /**
     * Method that takes in a full user model to send to the database in order to save the information
     * @param User $user
     */
    public function create($object);
    
    /**
     * Method that takes in an updated user model and id to update the correct user's credentials
     * @param User $updatedUser
     * @param int $id
     */
    public function update($object);
    
    /**
     * Mehtod that takes in the ID of the user to delete the user from the database
     * @param int $id
     */
    public function delete(int $id);
    
    /**
     * Method that return the a list of all the users in the data base
     */
    public function viewAll();
    
    /**
     * Method that takes in an ID of a secific user and returns a full user model
     * @param int $id
     */
    public function viewById(int $id);
    
    /**
     * Method that looks through all the users in the database to determin if the user credentials inputed match 
     * with a user in the database
     * @param User $user
     */
    public function authenticate($object, $request);
    
}